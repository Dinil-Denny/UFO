<div class="container-fluid user_register_container d-flex justify-content-center align-items-center">
    <div class="user_register d-flex justify-content-end">
        <div class="userSignBrownBox ms-4">
            <h4 class="userSignSideBox  mt-5">Verify OTP</h4>
            <p class="mt-3">Get access to your Orders, <br>Wishlist and Recommendations </p>
            <h1 class="fullform mt-5 pt-5">United</h1>
            <h1 class="fullform ms-5 ps-5">Fashion</h1>
            <h1 class="fullform ">Odyssey</h1>
        </div>
        <div class="userRegisterForm d-flex align-items-center justify-content-center">
            <form class="mt-5" action="/resetPassword" method="post">
                <input class="formDetails text-center" type="text" inputmode="numeric" autocomplete="one-time-code" name="otp" placeholder="Enter otp" required>
                <div class="separator mb-3 ms-5"></div>
                <button class="formDetails mt-5 " style="width: 80%; border-radius: 30px; background-color:#72383D; color:white" type="submit" class="btn btn-primary m-2">Verify OTP</button> 
                <a href="/resend-resetOTP" class="text-center ms-5 ps-4">Resend OTP</a>
                <div class="timer text-center">
                    <span id="counter"></span>
                </div>
                {{#if message}}
                <div class="notification text-center text-danger alert alert-danger" style="height: 40px; padding: 6px; margin-right: 25px;"> 
                    <p>{{message}}</p>
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>


{{!-- countdown timer --}}
<script>
    function countdown() {
        var seconds = 59;
        function tick() {
          var counter = document.getElementById("counter");
          seconds--;
          counter.innerHTML =
            "0:" + (seconds < 10 ? "0" : "") + String(seconds);
          if (seconds > 0) {
            setTimeout(tick, 1000);
          } else {
            document.getElementById("counter").innerHTML = "Resend otp";
          }
        }
        tick();
      }
      countdown();
</script>