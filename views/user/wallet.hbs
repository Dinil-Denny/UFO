
    <header class="container d-flex flex-wrap justify-content-between align-items-center py-3 mb-4 border-bottom">
        <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <span class="fs-4">My Wallet <i class="bi bi-wallet2"></i></span>
        </a>  
    </header>

    <main class="container my-5">
        <div class="row">
            
            <div class="col-md-4">
                <div class="card balance-card" style="background-color: #0AB3EF; color: white;">
                    <h5 class="card-title mb-4">Available Balance</h5>
                    {{#if wallet}}
                    <h1 class="card-text"><i class="bi bi-currency-rupee"></i> {{wallet.walletBalance}}</h1>
                    {{else}}
                    <h1 class="card-text"><i class="bi bi-currency-rupee"></i> 0.00</h1>
                    {{/if}}
                </div>
            </div>
            <div class="col-md-8">
                <div class="table-responsive ">
                    <div class="card-header fs-5 text-center fw-semibold mb-3">
                        Recent Transactions
                    </div>
                    <table class="card-body transactions-table table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Transaction date</th>
                                <th>Transaction type</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if formattedDateWalletData}}
                            {{#each formattedDateWalletData}}
                            <tr>
                                <td>{{this.transactionDate}}</td>
                                <td>{{this.transactionType}}</td>
                                <td>{{this.transactionAmount}}</td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr>
                                <td colspan="4" class="text-center text-primary fs-5">No transaction history found</td>
                            </tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

