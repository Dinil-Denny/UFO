<div class="container-fluid user_register_container d-flex justify-content-center align-items-center">
    <div class="user_register d-flex justify-content-end">
        <div class="userSignBrownBox ms-4">
            <h4 class="userSignSideBox  mt-5">Looks like you are new <br>here!</h4>
            <p class="mt-3">Sign up with your mobile <br>number to get started</p>
            <h1 class="fullform mt-5 pt-5">United</h1>
            <h1 class="fullform ms-5 ps-5">Fashion</h1>
            <h1 class="fullform ">Odyssey</h1>
        </div>
        <div class="userRegisterForm">
            <form class="ms-4 mt-3" action="/register" method="post" enctype="application/x-www-form-urlencoded">
                <input class="formDetails" type="text" name="name" placeholder="Enter full name">
                <div class="separator"></div>
                <input class="formDetails" type="email" name="email" placeholder="Enter your email">
                <div class="separator"></div>
                <input class="formDetails" type="tel" name="mobilenumber" placeholder="Mobile number(0-9 & 10 digits only)" pattern="[0-9]{10}">
                <div class="separator"></div>
                <input class="formDetails" type="password" name="password" placeholder="Enter password">
                <div class="separator"></div>
                <input class="formDetails" type="password" name="confirmPassword" placeholder="Confirm password">
                <div class="separator"></div>
                <label class="mt-2" for="termsNconditions">
                    <span class="terms" style="font-size: smaller;">By continuing, you agree to team UFOs of Use and <br>Privacy Policy.</span>
                </label>
                <button class="formDetails" style="width: 90%; border-radius: 30px; background-color:#72383D; color:white" type="submit" class="btn btn-primary m-2">SignUp</button> 
                <p class="or mt-1 text-center">Already have an account? <a class="accountCreation p-0" href="/login">LogIn</a></p>
                <div class="notification text-center text-danger">
                    {{#if message}}
                        <p>{{message}}</p>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>