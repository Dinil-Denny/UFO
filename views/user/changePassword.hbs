<div class="tab-pane container mb-5" id="account-detail"  role="tabpanel"  aria-labelledby="account-detail-tab">
  <div class="card">
    <div class="card-header">
      <h5>Edit Details</h5>
    </div>
    <div class="card-body">
      <form action="/changePassword/{{user._id}}" method="post">
        <div class="row">
          <div class="form-group col-md-6">
            <label>Enter new password <span class="required">*</span></label>
            <input  class="form-control square"  name="newPassword"  type="password"/>
          </div>
          <div class="form-group col-md-6">
            <label>Confirm new password <span class="required">*</span></label>
            <input  class="form-control square"  name="confirmPassword"  type="password"/>
          </div>
          <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Save</button> 
          </div>
          {{#if message}}
            <div class="text-center text-danger alert alert-danger my-3" role="alert" style="height: 40px; padding: 6px; margin-right: 25px;">  
                <p>{{message}}</p>
            </div>
          {{/if}}
        </div>
      </form>
    </div>
  </div>
</div>