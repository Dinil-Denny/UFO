<div class="container-fluid user_register_container d-flex justify-content-center align-items-center">
    <div class="user_register d-flex justify-content-end">
        <div class="userSignBrownBox ms-4">
            <h4 class="userSignSideBox  mt-5">Reset Password</h4>
            <p class="mt-3">Get access to your Orders, <br>Wishlist and Recommendations </p>
            <h1 class="fullform mt-5 pt-5">United</h1>
            <h1 class="fullform ms-5 ps-5">Fashion</h1>
            <h1 class="fullform ">Odyssey</h1>
        </div>
        <div class="userRegisterForm">
            <form class="ms-4 mt-5" action="/resetAccountPassword" method="post">
                <input class="formDetails" type="password" name="password" placeholder="Enter new password">
                <div class="separator"></div>
                <input class="formDetails" type="password" name="password1" placeholder="Confirm password">
                <div class="separator mb-4"></div>
                <button class="formDetails mt-5 ms-4" style="width: 80%; border-radius: 30px; background-color:#72383D; color:white" type="submit" class="btn btn-primary m-2">Reset Password</button> 
                <div class="notification text-center text-danger">
                    {{#if message}}
                        <p>{{message}}</p>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>