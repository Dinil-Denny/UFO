    <div class="addCatagory ms-5 my-5" style="width: 50vw;">
        <div class="catagoryForm">
            <h3>Edit Category</h3>
            <form action="/admin/editCategory/{{category._id}}" method="post">
                <div class="mb-3">
                    <label for="categoryName" class="form-label">Category Name</label>
                    <input type="text" class="form-control" name="catagoryName" id="categoryName" value="{{category.catagoryName}}" required>
                </div>
                <div class="mb-3">
                    <label for="categoryDescription" class="form-label">Category Description</label>
                    <textarea class="form-control" id="categoryDescription" name="description" rows="3" required>{{ category.description }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>   
                <div class="notification text-center text-danger">
                    {{#if message}}
                        <p>{{message}}</p>
                    {{/if}}
                </div>                                                                                      
            </form>
        </div>
    </div>
